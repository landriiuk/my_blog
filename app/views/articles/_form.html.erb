<% if article.errors.any? %>
  <div class="alert alert-danger">
    <h2><%= pluralize(article.errors.count, "error") %>:</h2>
    <ul>
      <% article.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: article, local: true, html: { multipart: true }) do |form| %>
  <div class="form-group">
    <%= form.text_field :title, placeholder: 'enter your  title', class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= form.cktext_area :text, placeholder: 'enter your  post', class: 'form-control' %>
  </div>

  <div class="form-group">
   <%= form.file_field :image %>
  </div>

  <div class="form-group">
    <%= form.submit class: 'btn btn-primary btn-lg btn-block' %>
  </div>
<% end %>
